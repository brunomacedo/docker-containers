<toolbox>
	<tool>
		<key>map</key>
		<class>java.util.HashMap</class>
	</tool>

	<tool>
		<key>math</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.MathTool</class>
	</tool>

	<tool>
		<key>escape</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.EscapeTool</class>
	</tool>

	<tool>
		<key>stringUtils</key>
		<scope>application</scope>
		<class>org.apache.commons.lang.StringUtils</class>
	</tool>

	<tool>
		<key>list</key>
		<scope>request</scope>
		<class>org.apache.velocity.tools.generic.ListTool</class>
	</tool>

	<tool>
		<key>include</key>
		<scope>request</scope>
		<class>org.apache.velocity.tools.view.IncludeTool</class>
	</tool>

	<tool>
		<key>link</key>
		<scope>request</scope>
		<class>org.apache.velocity.tools.view.LinkTool</class>
	</tool>

	<tool>
		<key>import</key>
		<scope>request</scope>
		<class>org.apache.velocity.tools.view.tools.ImportTool</class>
	</tool>

	<tool>
		<key>sort</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.SortTool</class>
	</tool>

	<tool>
		<key>xml</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.XmlTool</class>
	</tool>

	<tool>
		<key>alternator</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.AlternatorTool</class>
	</tool>

	<tool>
		<key>date</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.ComparisonDateTool</class>
		<parameter name="bundle" value="uol.velocity.tools.bundles.date"/>
		<parameter name="locale" value="pt_BR"/>
	</tool>

	<tool>
		<key>browser</key>
		<scope>request</scope>
		<class>org.apache.velocity.tools.view.BrowserTool</class>
	</tool>

	<tool>
		<key>number</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.NumberTool</class>
	</tool>

	<tool>
		<key>loop</key>
		<scope>request</scope>
		<class>org.apache.velocity.tools.generic.LoopTool</class>
	</tool>
	
	<tool>
		<key>render</key>
		<scope>request</scope>
		<class>org.apache.velocity.tools.generic.RenderTool</class>
	</tool>

	<tool>
		<key>_sort</key>
		<scope>application</scope>
		<class>br.com.uol.cms.templatecache.local.tools.SortToolWrapper</class>
	</tool>
	
	<tool>
		<key>_json</key>
		<scope>application</scope>
		<class>br.com.uol.cms.templatecache.local.tools.JsonWrapper</class>
	</tool>

	<tool>
		<key>_xml</key>
		<scope>application</scope>
		<class>br.com.uol.cms.templatecache.local.tools.XmlWrapper</class>
	</tool>

	<tool>
		<key>_log</key>
		<scope>application</scope>
		<class>uol.velocity.tcutil.tools.Log</class>
	</tool>

	<tool>
		<key>_reader</key>
		<scope>application</scope>
		<class>uol.velocity.tcutil.tools.Reader</class>
	</tool>

	<tool>
		<key>_userAgent</key>
		<scope>application</scope>
		<class>uol.velocity.tcutil.tools.UserAgentDetector</class>
	</tool>
	
	<tool>
		<key>_http</key>
		<scope>application</scope>
		<class>uol.velocity.tcutil.tools.Http</class>
	</tool>
	
	<tool>
		<key>_mustache</key>
		<scope>application</scope>
		<class>br.com.uol.cms.templatecache.local.tools.MustacheToolWrapper</class>
	</tool>
	
	
	<tool>
		<key>_access</key>
		<scope>application</scope>
		<class>br.com.uol.cms.templatecache.local.tools.AccessToolWrapper</class>
	</tool>
	
	
	<tool>
		<key>_content</key>
		<scope>application</scope>
		<class>br.com.uol.cms.templatecache.local.tools.ContentToolWrapper</class>
	</tool>
	
	
	
	<tool>
		<key>_recursive</key>
		<scope>application</scope>
		<class>br.com.uol.cms.templatecache.local.tools.RecursiveFindWrapper</class>
	</tool>
	
	

</toolbox>
